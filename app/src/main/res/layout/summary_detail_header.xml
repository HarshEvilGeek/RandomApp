<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summary_detail_header_CV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin_small"
    android:padding="2dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">


        <TextView
            style="@style/HeaderStyle"
            android:paddingBottom="@dimen/card_margin_small"
            android:id="@+id/acc_no_tv"
            tools:text="Acc. # 123456789" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/acc_no_tv"
            android:background="@android:color/white"/>

        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/cust_name_tv"
            android:layout_below="@id/acc_no_tv"
            android:text="Customer Name"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/cust_name_value_tv"
            android:layout_below="@id/acc_no_tv"
            tools:text="zara"
            tools:visibility="visible"/>


        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/balance_tv"
            android:layout_below="@id/cust_name_tv"
            android:text="Balance"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/balance_value_tv"
            android:layout_below="@id/cust_name_value_tv"
            tools:text="10000"
            tools:visibility="visible"/>


        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/avail_lt_tv"
            android:layout_below="@id/balance_tv"
            android:text="Available Limit"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/avail_lt_value_tv"
            android:layout_below="@id/balance_value_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            tools:text="10000"
            tools:visibility="visible"/>


        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/acc_type_tv"
            android:layout_below="@id/avail_lt_tv"
            android:text="Account Type"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/acc_type_value_tv"
            android:layout_below="@id/avail_lt_value_tv"
            tools:text="Savings"
            tools:visibility="visible"/>


        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/time_tv"
            android:layout_below="@id/acc_type_tv"
            android:text="Time"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/time_value_tv"
            android:layout_below="@id/acc_type_value_tv"
            tools:text="12-03-2016"
            tools:visibility="visible"/>


        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/status_tv"
            android:layout_below="@id/time_tv"
            android:text="Status"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/status_value_tv"
            android:layout_below="@id/time_value_tv"
            tools:text="Active"
            tools:visibility="visible"/>


        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/roi_tv"
            android:layout_below="@id/status_tv"
            tools:text="ROI %"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/roi_value_tv"
            android:layout_below="@id/status_value_tv"
            tools:text="12"
            tools:visibility="visible"/>

        <TextView
            style="@style/AccountSummaryHeaderStyle"
            android:id="@+id/delinquency_title"
            android:layout_below="@id/roi_tv"
            tools:visibility="visible"
            tools:text="Delin"/>

        <TextView
            style="@style/AccountSummaryValueStyle"
            android:id="@+id/delinquency_view"
            android:layout_below="@id/roi_value_tv"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="@dimen/card_margin_small"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/rounded_corner_border"
            tools:text="delinquency"
            tools:visibility="visible"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>