<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/summary_detail_header_CV"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin_small"
    android:padding="2dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/acc_no_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:text="123456789"
            android:textColor="@color/colorAccent"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cust_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/acc_no_tv"
            android:paddingLeft="@dimen/summary_detail_header_left_padding"
            android:paddingTop="2dp"
            android:text="Customer Name"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cust_name_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/acc_no_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            android:paddingTop="2dp"
            android:text="zara"
            android:visibility="gone" />


        <TextView
            android:id="@+id/balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cust_name_tv"
            android:paddingLeft="@dimen/summary_detail_header_left_padding"
            android:paddingTop="2dp"
            android:text="Balance"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/balance_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/cust_name_value_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            android:paddingTop="2dp"
            android:text="10000"
            android:visibility="gone" />


        <TextView
            android:id="@+id/avail_lt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_tv"
            android:paddingLeft="@dimen/summary_detail_header_left_padding"
            android:paddingTop="2dp"
            android:text="Available Limit"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/avail_lt_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/balance_value_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            android:paddingTop="2dp"
            android:text="10000"
            android:visibility="gone" />


        <TextView
            android:id="@+id/acc_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avail_lt_tv"
            android:paddingLeft="@dimen/summary_detail_header_left_padding"
            android:paddingTop="2dp"
            android:text="Account Type"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/acc_type_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/avail_lt_value_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            android:paddingTop="2dp"
            android:text="Savings"
            android:visibility="gone" />


        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/acc_type_tv"
            android:paddingLeft="@dimen/summary_detail_header_left_padding"
            android:paddingTop="2dp"
            android:text="Time"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/acc_type_value_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            android:paddingTop="2dp"
            android:text="12-03-2016"
            android:visibility="gone" />


        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_tv"
            android:paddingLeft="@dimen/summary_detail_header_left_padding"
            android:paddingTop="2dp"
            android:text="Status"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/status_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/time_value_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            android:paddingTop="2dp"
            android:text="Active"
            android:visibility="gone" />


        <TextView
            android:id="@+id/roi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_tv"
            android:paddingLeft="@dimen/summary_detail_header_left_padding"
            android:paddingTop="2dp"
            android:text="ROI %"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/roi_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/status_value_tv"
            android:paddingRight="@dimen/summary_detail_header_right_padding"
            android:paddingTop="2dp"
            android:text="12"
            android:visibility="gone" />


    </RelativeLayout>
</android.support.v7.widget.CardView>