<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/feb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feb 16"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/jan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jan 16"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dec 15"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/nov"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nov 15"
            android:gravity="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/oct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:text="Oct 15"
            android:gravity="center"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/sep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:text="Sep 15"
            android:gravity="center"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/aug"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aug 15"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/jul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jul 15"
            android:gravity="center"
            android:textColor="@android:color/white" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/jun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jun 15"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/may"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="May 15"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/apr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apr 15"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/mar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mar 15"
            android:gravity="center"
            android:textColor="@android:color/white" />


    </LinearLayout>


</LinearLayout>