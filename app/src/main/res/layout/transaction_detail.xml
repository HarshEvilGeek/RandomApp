<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summary_detail_header_CV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_small"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin_small"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/card_margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/card_margin_smaller">

            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="â‚¹ 10000" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/trans_category_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_small"
                android:gravity="right"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/trans_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="@dimen/card_margin_small"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:text="DEBIT"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/card_margin_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date  "
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/date_of_transaction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/summary_detail_header_left_padding"
            android:text="10-03-2016" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/card_margin_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time  "
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible" />

            <TextView
                android:id="@+id/time_of_transaction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/summary_detail_header_left_padding"
                android:text="10-03-2016" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/card_margin_small">


            <TextView
                android:id="@+id/trans_remark_heading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remark "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/trans_remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                android:visibility="visible"
                tools:text="this is for test" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>