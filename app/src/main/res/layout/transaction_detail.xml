<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/summary_detail_header_CV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin_small"
    android:layout_marginBottom="@dimen/card_margin_small"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_margin_small"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_margin_smaller"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amount_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Rs. 10000" />

            <TextView
                android:id="@+id/date_of_transaction_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="@dimen/summary_detail_header_left_padding"
                android:text="10-03-2016" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/card_margin_small"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/trans_remark_heading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remark:"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/trans_remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="this is for test"
                android:textStyle="italic"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>