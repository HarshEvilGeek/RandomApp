<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        style="@style/CardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin_small"
                android:text="Address"
                android:textColor="@color/colorPrimaryDark"/>
    
            <include layout="@layout/thin_line"/>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        
                <TextView
                    android:id="@+id/address_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/card_margin_small"
                    android:layout_gravity="center_vertical"
                    android:text="408, Ganga Block, National Games Village, Koramangala 6th Block, Bangalore, Karnataka, "
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/map_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/card_margin"
                    android:background="@drawable/address" />
        
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin_small"
                android:text="IFSC Code"
                android:textColor="@color/colorPrimaryDark"/>
    
            <include layout="@layout/thin_line"/>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        
                <TextView
                    android:id="@+id/ifsc_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/card_margin_small"
                    android:layout_gravity="center_vertical"
                    android:text="HDFC0000231"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/ifsc_code"/>
        
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardStyle">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin_small"
                android:text="Phone"
                android:textColor="@color/colorPrimaryDark"/>
            
            <include layout="@layout/thin_line"/>
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        
                <TextView
                    android:id="@+id/phone_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/card_margin_small"
                    android:layout_gravity="center_vertical"
                    android:text="01 2345 6789"
                    android:textSize="16sp"/>

                <ImageButton
                    android:id="@+id/phone_button"
                    android:layout_width="30dp"
                    android:layout_margin="@dimen/card_margin_small"
                    android:layout_height="30dp"
                    android:background="@drawable/phone"/>
                
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>